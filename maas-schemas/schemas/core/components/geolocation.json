{
  "$id": "https://schemas.maas.global/core/components/geolocation.json",
  "description": "Partial (Points only) GeoJSON Schema",
  "definitions": {
    "featureCollection": {
      "type": "object",
      "properties": {
        "type": { "enum": ["FeatureCollection"] },
        "features": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/feature"
          }
        }
      },
      "required": ["type", "features"]
    },
    "feature": {
      "type": "object",
      "properties": {
        "type": { "enum": ["Feature"] },
        "geometry": {
          "$ref": "#/definitions/geometry"
        },
        "properties": {
          "$ref": "#/definitions/properties"
        }
      },
      "additionalProperties": false,
      "required": ["type", "geometry", "properties"]
    },
    "geometry": {
      "type": "object",
      "properties": {
        "type": { "enum": ["Point"] },
        "coordinates": {
          "$ref": "https://schemas.maas.global/core/components/units-geo.json#/definitions/shortLocation"
        }
      },
      "additionalProperties": false,
      "required": ["type", "coordinates"]
    },
    "properties": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256,
          "examples": ["Jani Hirviinen", "Barri Känälainen-sön"]
        },
        "streetNumber": {
          "type": "string",
          "minLength": 1,
          "maxLength": 16,
          "examples": ["1", "221B"]
        },
        "streetName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256,
          "examples": ["Kalevankatu", "Baker Street", "John Stenbergin ranta"]
        },
        "city": {
          "type": "string",
          "minLength": 1,
          "maxLength": 64,
          "examples": ["Helsinki", "Tokyo"]
        },
        "country": {
          "type": "string",
          "minLength": 1,
          "maxLength": 64,
          "examples": ["Finland", "Japan"]
        },
        "countryCode": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256,
          "examples": ["FI", "JP"]
        },
        "houseNumber": {
          "type": "string",
          "minLength": 1,
          "maxLength": 16,
          "examples": ["1", "221B", "A 9"]
        },
        "zipcode": {
          "$ref": "https://schemas.maas.global/core/components/address.json#/definitions/zipCode"
        }
      },
      "required": ["name"]
    }
  }
}
