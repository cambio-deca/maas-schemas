{
  "$id": "https://schemas.maas.global/core/components/spaceDemand.json",
  "description": "A spaceDemand describes nr of passengers (adults, infatnts, etc) and bags (luggages).",
  "definitions": {
    "spaceDemandObject": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "adults": { "type": "integer", "minimum": 0, "description": "Number of adults" },
        "children": { "type": "integer", "minimum": 0, "description": "Number of children" },
        "infants": { "type": "integer", "minimum": 0, "description": "Number of infants" },
        "bags": { "type": "integer", "minimum": 0, "description": "Number of bags (luggages)" }
      }
    },
    "spaceDemandString": {
      "type": "string",
      "regexp": "/(adults:[1-9][0-9]*)|(children:[1-9][0-9]*)|(infants:[1-9][0-9]*)|(bags:[1-9][0-9]*)/gui",
      "examples": ["adults:1|bags:2"]
    }
  }
}
