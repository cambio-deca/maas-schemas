{
  "$id": "https://schemas.maas.global/tsp/booking-ticket/request.json",
  "description": "Request schema for retrieving a ticket from booking through a TSP adapter",
  "type": "object",
  "properties": {
    "tspId": {
      "$ref": "https://schemas.maas.global/core/booking.json#/definitions/tspId"
    },
    "ticket": {
      "description": "Ticket path.",
      "anyOf": [
        {
          "type": "string",
          "pattern": "[a-z]\\.[svg|html|pdf]"
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "[a-z]\\.[svg|html|pdf]",
            "minimum": 1
          }
        }
      ]
    },
    "token": {
      "$ref": "https://schemas.maas.global/core/booking.json#/definitions/token"
    }
  },
  "required": ["ticket", "token", "tspId"],
  "additionalProperties": true
}
