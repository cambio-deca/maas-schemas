          "$ref": "https://schemas.maas.global/core/itinerary.json"
        },
        "customerSelections": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "ref": {
                "$ref": "https://schemas.maas.global/core/product-option.json#/definitions/ref"
              },
              "customerSelection": {
                "$ref": "https://schemas.maas.global/core/components/customerSelection.json"
              }
