{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.maas.global/maas-backend/itineraries/itinerary-create/request.json",
  "description": "Request schema for itineraries-create",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "identityId": {
      "$ref": "https://schemas.maas.global/core/components/units.json#/definitions/identityId"
    },
    "headers": {
      "$ref": "https://schemas.maas.global/core/components/api-common.json#/definitions/headers"
    },
    "payload": {
      "type": "object",
      "properties": {
        "itinerary": {
          "$ref": "https://schemas.maas.global/core/itinerary.json"
        },
        "paymentSourceId": {
          "$ref": "https://schemas.maas.global/core/components/common.json#/definitions/paymentSourceId"
        },
        "outward": {
          "$ref": "#/definitions/outwardReturnWrapper"
        },
        "return": {
